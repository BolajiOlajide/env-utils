{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "lib": ["es2017"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "test/__tests__"],
  "exclude": ["node_modules", "lib"]
}
